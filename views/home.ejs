<%- include("partials/header") -%>

<div class="home">
  <h1 class="title">Hello</h1>

  <div class="content">
    <p><%= startingContent %></p>
  </div>
</div>

<div class="posts">
  <% posts.forEach(function(element){ %>
      <h1><%= element.title %></h1>
      <p>
        <%= element.content.substring(0, 300) + "...." %>
        <a href="/post/<%= element.title %>">Read more</a>
      </p>
    <% }); %>
</div>

