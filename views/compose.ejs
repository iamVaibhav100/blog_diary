<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Title</span>
        </div>
        <input type="text" class="form-control" name="postTitle" placeholder="Title" aria-label="Username" aria-describedby="basic-addon1">
      </div>

      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">Post</span>
        </div>
        <textarea class="form-control" name="postBody" aria-label="With textarea"></textarea>
      </div>

      <button type="submit" class="btn btn-dark publish">Publish</button>
</form>

<%- include("partials/footer") -%> 